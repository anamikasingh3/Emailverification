<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".module.services.BathroomAddOnActivity"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/viewpagerbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:orientation="vertical">

        <include
            android:id="@+id/servicestoolbar"
            layout="@layout/servicestoolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_7sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_88sdp"
                    android:layout_gravity="center|start"


                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/addon"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_19ssp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="4px"

                    android:layout_gravity="center|end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/greyBg"
                    android:gravity="center|start"></View>
                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
           android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:text="@string/addonsone"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox2" />
                <View

                    android:layout_width="match_parent"
                    android:layout_height="4px"
android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_gravity="center|end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/greyBg"
                    android:gravity="center|start"></View>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:text="@string/addonstwo"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox2" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_42sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/addonstwodis"></TextView>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="4px"
android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_gravity="center|end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/greyBg"
                    android:gravity="center|start"></View>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:text="@string/addonsthree"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox2" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_41sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_14sdp"
                    android:text="@string/addonthreedis"></TextView>
            </LinearLayout></ScrollView></LinearLayout>
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/roundedmorered"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_6sdp"

            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_6sdp"
            android:gravity="center"

            app:srcCompat="@drawable/arrowforwardwhite"
            ></ImageView>

    </LinearLayout>
</RelativeLayout>